<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="164dp"
        android:text="welcome in my game "
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/gameModeGroup"
        android:layout_width="116dp"
        android:layout_height="144dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="159dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/singlePlayerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لعب فردي" />

        <RadioButton
            android:id="@+id/multiPlayerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لعب مع لاعب آخر" />

        <RadioButton
            android:id="@+id/aiPlayerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لعب مع كمبيوتر" />
    </RadioGroup>

    <Button
        android:id="@+id/buttongo"
        android:layout_width="135dp"
        android:layout_height="56dp"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="140dp"
        android:text="play go"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="105dp"
        android:ems="10"
        android:hint="enter you name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameModeGroup" />

    <EditText
        android:id="@+id/editname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="105dp"
        android:ems="10"
        android:hint="enter you name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/buttongo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editname1"
        app:layout_constraintVertical_bias="0.366" />

</androidx.constraintlayout.widget.ConstraintLayout>